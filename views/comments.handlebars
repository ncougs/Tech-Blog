<p class="h3">Post</p>

<div class="card text-center my-3">
    <div class="card-header">
        {{post.user.first_name}} {{post.user.last_name}}
    </div>
    <div class="card-body">
        <h5 class="card-title">{{post.title}}</h5>
        <p class="card-text">{{post.body}}</p>
        <a href="/add-comment/{{post.id}}" class="btn btn-primary comment" data-postId="{{post.id}}">Comment</a>
    </div>
    <div class="card-footer text-muted">
        {{formatDate post.post_date}}
    </div>
</div>

<p class="h4">Comments</p>

{{#each comment}}
<div class="card">
    <div class="card-header">
    {{formatDate this.comment_date}}
    </div>
    <div class="card-body">
    <blockquote class="blockquote mb-0">
    <p>{{this.comment_text}}</p>
    <footer class="blockquote-footer">{{this.user.first_name}} {{this.user.last_name}}</footer>
    </blockquote>
    </div>
</div>
{{/each}}

<script src="../js/comment.js"></script>